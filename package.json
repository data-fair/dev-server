{
  "name": "@data-fair/dev-server",
  "version": "1.13.1",
  "description": "A development server for optimal development experience of data-fair applications.",
  "main": "server/index.js",
  "bin": {
    "df-dev-server": "server/index.js"
  },
  "type": "module",
  "scripts": {
    "dev": "NODE_ENV=development node --watch server",
    "dev-src": "http-server test-apps/minimal --port=3000 --cors --silent",
    "dev-vue3": "APP_URL=http://localhost:3000/app/ APP_SCRIPT=dev-src-vue3 NODE_ENV=development node --watch server",
    "dev-src-vue3": "cd test-apps/vue3 && npm run dev",
    "prepublishOnly": "npm run lint && npm run check-types && npm run build",
    "lint": "eslint . && npm -w ui run lint",
    "lint-fix": "eslint --fix . && npm -w ui run lint-fix",
    "check-types": "tsc && npm -w ui run check-types",
    "build-types": "df-build-types ."
  },
  "workspaces": [
    "ui"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/koumoul-dev/df-dev-server.git"
  },
  "keywords": [
    "data-fair",
    "dev"
  ],
  "author": "Alban Mouton <alban.mouton@koumoul.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/koumoul-dev/df-dev-server/issues"
  },
  "homepage": "https://github.com/koumoul-dev/df-dev-server#readme",
  "devDependencies": {
    "@data-fair/lib-types-builder": "^1.8.2",
    "@types/config": "^3.3.5",
    "@types/cors": "^2.8.19",
    "@types/debug": "^4.1.12",
    "@types/express": "^5.0.3",
    "@types/node": "^24.0.7",
    "@types/ws": "^8.18.1",
    "eslint": "^9.30.0",
    "eslint-plugin-vue": "^10.2.0",
    "eslint-plugin-vuetify": "^2.5.2",
    "neostandard": "^0.12.1",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@parse5/tools": "^0.6.0",
    "chalk": "^5.4.1",
    "config": "^4.0.0",
    "cors": "^2.8.5",
    "debug": "^4.4.1",
    "dotenv": "^17.0.0",
    "express": "^5.1.0",
    "http-proxy-middleware": "^3.0.5",
    "parse5": "^7.3.0",
    "ws": "^8.18.3"
  }
}
